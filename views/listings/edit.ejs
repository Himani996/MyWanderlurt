<% layout('/layouts/boilerplate')%>
<body>
  <div class ="row">
  <div class="col-8 offset-2">
     <form method="post" action="/listings/<%=listing._id%>?_method=PUT" 
      novalidate class="needs-validation" >
    <h3> Edit Listing</h3>
    <label for="title" class="form-label">Title</label><br/>
    <div class="mb-3">
    <input name="listing[title]" class="form-control" 
    value="<%=listing.title%>" type ="text">
    <br/>
     <div class="invalid-feedback">
        Please enter a title
      </div>
    </div>
       <div class="mb-3">
      <label for="description" class="form-label">Description</label><br/>
    <textarea name="listing[description]" class="form-control">
      <%=listing.description%></textarea>
       <div class="invalid-feedback">
        Please enter a valid description
      </div>
    <br/></div>
    <div class="mb-3">
     <label for="image" class="form-label">Image</label><br/>
    <input  required  name="listing[image]" value="<%=listing.image%>" 
    class="form-control" type ="text">
     <div class="invalid-feedback">
        Please enter a valid image link
      </div>
    <br/></div>
    <div class="row">
 <div class="mb-3 col-md-4">
      <label for="price" class="form-label">Price</label><br/>
    <input required name="listing[price]" value="<%=listing.price%>" 
    class="form-control" type ="number">
     <div class="invalid-feedback">
        Please enter a valid price
      </div>
    <br/></div>
    <div class="mb-3 col-md-8">
      <label for="location" class="form-label">Location</label><br/>
    <input  required name="listing[location]" value="<%=listing.location%>"  
    class="form-control"  type ="text">
     <div class="invalid-feedback">
        Please enter a valid location
      </div>
    <br/></div></div>
    <div class="mb-3">
      <label for="country" class="form-label">Country</label><br/>
    <input  required  name="listing[country]" value="<%=listing.country%>" 
    class="form-control" type ="text">
     <div class="invalid-feedback">
        Please enter a valid country
      </div>
    <br/></div> 
    <button class="btn btn-danger add-btn">Save</button> 
    </div>
    </div>  
    <script src="CSS/JS/script.js"></script>
</body>
